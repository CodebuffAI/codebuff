{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend server for Codebuff",
  "main": "dist/index.js",
  "license": "UNLICENSED",
  "scripts": {
    "start": "bun run -r tsconfig-paths/register src/index.ts",
    "dev": "lsof -t -i:4242 | xargs kill -9 2>/dev/null || true && bun --hot run -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "typecheck-this-package": "tsc --noEmit && tsc-alias",
    "typecheck": "bun run --cwd ../common build && bun run typecheck-this-package",
    "test": "bun test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@google-cloud/vertexai": "^1.9.3",
    "@t3-oss/env-core": "0.11.1",
    "diff": "5.2.0",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "gpt-tokenizer": "2.8.1",
    "ignore": "5.3.2",
    "lodash": "*",
    "openai": "^4.78.1",
    "pino": "9.4.0",
    "postgres": "3.4.4",
    "ts-pattern": "5.3.1",
    "ws": "8.18.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.1.16",
    "@types/diff": "^5.0.3",
    "@types/express": "^4.17.13",
    "@types/node": "*",
    "@types/ws": "^8.5.5",
    "nodemon": "^2.0.15",
    "pino-pretty": "^11.2.2",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@types/lodash": "*"
  }
}
