{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "types": ["node", "bun"],
    "baseUrl": ".",
    "paths": {
      "@/env": ["../env.ts"],
      "common/*": ["../common/src/*"],
      "@/*": ["./src/*"],
      "@codebuff/billing": ["../packages/billing/src"],
      "@codebuff/bigquery": ["../packages/bigquery/src"],
      "@codebuff/internal": ["../packages/internal/src"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__mock-data__/**/*"],
  "references": [
    { "path": "../common" },
    { "path": "../packages/billing" },
    { "path": "../packages/bigquery" },
    { "path": "../packages/internal" }
  ]
}
