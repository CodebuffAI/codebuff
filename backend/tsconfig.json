{
  "compilerOptions": {
    "allowJs": true,
    "rootDir": "./src",
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "incremental": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": ["node", "bun"],
    "baseUrl": ".",
    "paths": {
      "common/*": ["./src/common/*", "../common/src/*"],
      "@/*": ["./src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types",
      "../node_modules"
    ],
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__mock-data__/**/*"],
  "references": [{ "path": "../common" }],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
