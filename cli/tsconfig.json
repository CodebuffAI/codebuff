{
  "compilerOptions": {
    "target": "ES2020", // Use a modern ES version
    "module": "Node16", // Updated: Must match moduleResolution
    "jsx": "react-jsx", // Use the new JSX transform
    "moduleResolution": "node16", // Updated: Use node16 for better ESM support
    "esModuleInterop": true, // Allows default imports from commonjs modules
    "forceConsistentCasingInFileNames": true, // Enforce consistent file casing
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": ".", // Specify the root directory of input files
    "resolveJsonModule": true, // Allow importing JSON modules
    "allowSyntheticDefaultImports": true // Allow default imports from modules with no default export
  },
  "include": ["**/*.ts", "**/*.tsx"], // Files to include in compilation
  "exclude": ["node_modules", "dist"] // Folders to exclude
}