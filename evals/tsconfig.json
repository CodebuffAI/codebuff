{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "types": ["bun", "node"],
    "baseUrl": ".",
    // Ensure modern resolution for package subpaths like @codebuff/common/db/schema
    "moduleResolution": "Bundler",
    // Quiet third-party .d.ts issues from bun/drizzle
    "skipLibCheck": true,
    // Keep interop friendly for CJS/ESM bridges
    "esModuleInterop": true
  },
  "include": ["seeds/**/*.ts"]
}
