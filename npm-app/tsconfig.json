{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["bun", "node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@codebuff/common/*": ["./dist/common/*"],
      "@codebuff/code-map/*": ["./dist/code-map/*"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../common" },
    { "path": "../packages/code-map" }
  ]
}
