{
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es2020",
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react",
    "allowJs": true,
    "types": ["node", "react", "ink"],
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "common/*": ["../common/src/*"],
      "code-map/*": ["../code-map/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "package.json"],
  "references": [
    { "path": "../common" },
    { "path": "../packages/code-map" }
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
