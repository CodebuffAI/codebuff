{
  "name": "@codebuff/build-tools",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": ".",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsc",
        "cwd": "packages/build-tools"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && (rm tsconfig.tsbuildinfo || true)",
        "cwd": "packages/build-tools"
      }
    }
  }
}
