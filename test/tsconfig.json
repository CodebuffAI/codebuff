{
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "incremental": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "backend/*": ["../backend/src/*"],
      "common/*": ["../common/src/*"],
      "code-map/*": ["../packages/code-map/*"],
      "npm-app/*": ["../npm-app/src/*"],
      "@codebuff/billing": ["../packages/billing/src"]
    },
    "types": ["bun"],
    "outDir": "./dist"
  },
  "include": ["__src__/**/*"],
  "exclude": ["node_modules", "__mock-projects__/**/*"],
  "references": [
    { "path": "../common" },
    { "path": "../backend" },
    { "path": "../packages/code-map" },
    { "path": "../packages/billing" },
    { "path": "../npm-app" }
  ]
}
