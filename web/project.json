{
  "name": "web",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "application",
  "targets": {
    "contentlayer": {
      "executor": "nx:run-commands",
      "options": {
        "command": "contentlayer build",
        "cwd": "web"
      },
      "outputs": ["{projectRoot}/.contentlayer", "{projectRoot}/.contentlayer/generated"]
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/.next"],
      "options": {
        "commands": [
          "next build"
        ],
        "cwd": "web",
        "parallel": false
      },
      "dependsOn": ["contentlayer", "^build"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next dev",
        "cwd": "web"
      },
      "dependsOn": ["contentlayer"]
    },
    "start-app": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next start",
        "cwd": "web"
      },
      "dependsOn": ["build"]
    },
    "start-discord-bot": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run scripts/discord/index.ts",
        "cwd": "web"
      }
    },
    "start-message-expiration": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run scripts/message-expiration/index.ts",
        "cwd": "web"
      }
    },
    "start-all-background-tasks": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx web:start-discord-bot",
          "nx web:start-message-expiration"
        ],
        "parallel": true
      }
    }
  },
  "implicitDependencies": ["common", "@codebuff/billing"]
}