{
  "name": "web",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "application",
  "targets": {
    "contentlayer": {
      "executor": "nx:run-commands",
      "options": {
        "command": "contentlayer build",
        "cwd": "web"
      },
      "outputs": [
        "{projectRoot}/.contentlayer",
        "{projectRoot}/.contentlayer/generated"
      ]
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/.next"],
      "options": {
        "commands": [
          "if command -v infisical >/dev/null 2>&1; then infisical run -- next build; else next build; fi"
        ],
        "cwd": "web",
        "parallel": false
      },
      "dependsOn": ["^build", "contentlayer"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "infisical run --log-level=warn -- next dev -p 3000",
        "cwd": "web"
      },
      "dependsOn": ["contentlayer"]
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next start",
        "cwd": "web"
      },
      "dependsOn": ["build"]
    }
  },
  "implicitDependencies": ["common", "@codebuff/billing"]
}
